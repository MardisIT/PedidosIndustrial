<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_margin="5dp"
        android:weightSum="2"
        >
        <TextView
            android:id="@+id/txtsaldopagar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="Saldo del cliente: "
            android:gravity="center_vertical"

            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/txtvalorsaldo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/red_500"
            android:text="0.00"
            android:gravity="center_horizontal"

            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_margin="5dp"
        android:weightSum="2"
        >
        <TextView
            android:id="@+id/txtcupodisponible"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="Cupo Disponible: "
            android:gravity="center_vertical"

            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/txtvalorcupo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/green_500"
            android:text="0.00"
            android:gravity="center_horizontal"

            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_margin="5dp"
        android:weightSum="2"
        >
        <TextView
            android:id="@+id/txtcupode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="Plazo: "
            android:gravity="center_vertical"

            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/txtdiasplazo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/green_500"
            android:text="0.00"
            android:gravity="center_horizontal"

            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_margin="5dp"
        android:weightSum="1"
        >
        <TextView
            android:id="@+id/txtfacturas"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"

            android:text="Facturas Pendientes Pago"
            android:gravity="center_horizontal"

            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_margin="5dp"
        android:weightSum="1"
        >
        <TextView
            android:id="@+id/txtfacturasEditar"
            android:layout_width="0dp"
            android:layout_weight="1"
           android:textColor="@color/black"
            android:layout_height="match_parent"

            android:text="Facturas Pendientes Pago"
            android:gravity="center_vertical"

            android:textSize="20dp"
            />
    </LinearLayout>

</LinearLayout>
